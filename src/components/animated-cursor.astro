<div id="cursor">
  <div id="cursor1"></div>
  <div id="cursor2"></div>
  <div id="cursor3"></div>
</div>

<script>
  let cursor1 = document.getElementById('cursor1');
  let cursor2 = document.getElementById('cursor2');
  let cursor3 = document.getElementById('cursor3');

  document.body.addEventListener('mousemove', (event) => {
    cursor1.style.left = event.clientX + 'px';
    cursor1.style.top = event.clientY + 'px';
    cursor2.style.left = event.clientX + 'px';
    cursor2.style.top = event.clientY + 'px';
    cursor3.style.left = event.clientX + 'px';
    cursor3.style.top = event.clientY + 'px';
  });

  function addClasses() {
    cursor2.classList.add('hover');
    cursor3.classList.add('hover');
  }

  function removeClasses() {
    cursor2.classList.remove('hover');
    cursor3.classList.remove('hover');
  }

  removeClasses();

  for (const target of document.getElementsByClassname('hover-target')) {
    addListeners(target);
  }

  function addListeners(target) {
    target.addEventListener('mouseover', addClasses);
    target.addEventListener('mouseout', removeClasses);
  }
</script>

<style>
  #cursor1,
  #cursor2,
  #cursor3 {
    position: fixed;
    border-radius: 50%;
    transform: translateX(-50%) translateY(-50%);
    pointer-events: none;
    left: -100px;
    top: 50%;
    mix-blend-mode: difference;
    -webkit-transition: all 300ms linear;
    transition: all 300ms linear;
  }
  #cursor1 {
    background-color: #fff;
    height: 0;
    width: 0;
    z-index: 99999;
  }
  #cursor2,
  #cursor3 {
    height: 36px;
    width: 36px;
    z-index: 99998;
    -webkit-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
  }
  #cursor2 .hover,
  #cursor3 .hover {
    -webkit-transform: scale(2) translateX(-25%) translateY(-25%);
    transform: scale(2) translateX(-25%) translateY(-25%);
    border: none;
  }
  #cursor2 {
    border: 2px solid #fff;
    box-shadow: 0 0 22px rgba(255, 255, 255, 0.6);
  }
  #cursor2 .hover {
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 12px rgba(255, 255, 255, 0.2);
  }

  body {
    cursor: none;
    background-color: black;
  }
</style>
