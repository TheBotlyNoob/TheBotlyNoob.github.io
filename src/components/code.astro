---
export interface props {
  lang: string;
  inline?: boolean;
}

let { lang, inline, ...props } = Astro.props as props;

let class_name = `language-${lang}`;
---

{inline ? (
  <code {...props} class={class_name}>
    <slot />
  </code>
) : (
  <pre {...props}>
    <code class={class_name}>
      <slot />
    </code>
  </pre>
)}
