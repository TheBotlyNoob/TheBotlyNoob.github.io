---
import Layout from "@/layouts/Layout.astro";

const writings = await Astro.glob("./*.md");
---

<Layout title="School" class={["flex", "flex-col", "gap-8"]}>
    <h1>School</h1>
    <section class:list={["flex", "flex-row"]}>
        {
            writings.map((writing) => (
                <a href={writing.url}>
                    <article>
                        <h2>{writing.frontmatter.title}</h2>
                    </article>
                </a>
            ))
        }
    </section>
</Layout>
